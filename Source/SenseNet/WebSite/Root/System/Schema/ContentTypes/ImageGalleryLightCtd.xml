<?xml version="1.0" encoding="utf-8"?>
<ContentType name="ImageGalleryLight" parentType="Folder"
             handler="SenseNet.ContentRepository.Folder"  
             xmlns="http://schemas.sensenet.com/SenseNet/ContentRepository/ContentTypeDefinition">
  <DisplayName>Image Gallery Light</DisplayName>
	<Description>Image Gallery Light is a special folder type. Thumbnails are generated from images uploaded 
  to this list on the fly. Use the Content Collection portlet to show it on a page.</Description>
	<Icon>gallery</Icon>
  <AllowedChildTypes>
    Image
  </AllowedChildTypes>
  <Fields>
    <Field name="DisplayName" type="ShortText">
      <DisplayName>Display Name</DisplayName>
    </Field>
    <Field name="Description" type="LongText">
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
      </Configuration>
    </Field>
    <Field name="ViewSizeX" type="Integer">
			<DisplayName>View size - width</DisplayName>
			<Description>Maximum width of the middle size images which are displayed when you click on the thumbnails.</Description>
      <Configuration>
        <MinValue>1</MinValue>
        <DefaultValue>500</DefaultValue>
      </Configuration>
		</Field>
		<Field name="ViewSizeY" type="Integer">
      <DisplayName>View size - height</DisplayName>
      <Description>Maximum height of the middle size images which are displayed when you click on the thumbnails.</Description>
      <Configuration>
        <MinValue>1</MinValue>
        <DefaultValue>500</DefaultValue>
      </Configuration>
    </Field>
		<Field name="ThumbSizeX" type="Integer">
			<DisplayName>Thumbnail width</DisplayName>
			<Description>Maximum width of thumbnail images</Description>
      <Configuration>
        <MinValue>1</MinValue>
        <DefaultValue>100</DefaultValue>
      </Configuration>
    </Field>
		<Field name="ThumbSizeY" type="Integer">
      <DisplayName>Thumbnail height</DisplayName>
      <Description>Maximum height of thumbnail images</Description>
      <Configuration>
        <MinValue>1</MinValue>
        <DefaultValue>100</DefaultValue>
      </Configuration>
    </Field>
    <Field name="Index" type="Integer">
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
      </Configuration>
    </Field>
    <Field name="Version" type="Version">
      <Configuration>
        <VisibleBrowse>Hide</VisibleBrowse>
        <VisibleEdit>Hide</VisibleEdit>
        <VisibleNew>Hide</VisibleNew>
      </Configuration>
    </Field>
    <Field name="InheritableVersioningMode" type="InheritableVersioningMode">
      <Configuration>
        <VisibleBrowse>Hide</VisibleBrowse>
        <VisibleEdit>Hide</VisibleEdit>
        <VisibleNew>Hide</VisibleNew>
      </Configuration>
    </Field>
    <Field name="InheritableApprovingMode" type="InheritableApprovingMode">
      <Configuration>
        <VisibleBrowse>Hide</VisibleBrowse>
        <VisibleEdit>Hide</VisibleEdit>
        <VisibleNew>Hide</VisibleNew>
      </Configuration>
    </Field>
  </Fields>
</ContentType>